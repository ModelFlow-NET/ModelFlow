<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:DataGridAsyncDemoMVVM.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:NameHeaderViewModel"
             x:Class="DataGridAsyncDemoMVVM.Views.NameHeaderView">
    <StackPanel>
        <TextBlock Text="Name" />
        <TextBox Text="{Binding Filter}" />
        <Button Content="Sort" Command="{Binding ToggleSortCommand}" />
    </StackPanel>
</UserControl>
